admin:
  access_log_path: /var/vcap/sys/log/envoy-simple/admin_access.log
  address:
    socket_address:
      address: 127.0.0.1
      port_value: 8001

static_resources:
  listeners:
  - name: listener_3307
    address:
      socket_address:
        address: 0.0.0.0
        port_value: 3307
    filter_chains:
    - filters:
      - name: envoy.tcp_proxy
        config:
          stat_prefix: ingress_3307
          cluster: local_mysql
  clusters:
  - name: local_mysql
    connect_timeout: 0.25s
    type: STATIC
    lb_policy: ROUND_ROBIN
    load_assignment:
      cluster_name: local_mysql
      endpoints:
      - lb_endpoints:
        - endpoint:
            address:
              socket_address:
                address: 127.0.0.1
                port_value: 3306
