node:
  cluster: simple-proxy
  id: <%= spec.id %>

admin:
  access_log_path: /var/vcap/sys/log/envoy-simple/admin_access.log
  address:
    socket_address:
      address: 127.0.0.1
      port_value: 8001

dynamic_resources:
  cds_config:
    path: /var/vcap/jobs/envoy-simple/config/envoy-clusters.yaml
  lds_config:
    path: /var/vcap/jobs/envoy-simple/config/envoy-listeners.yaml
