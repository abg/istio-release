---
processes:
- name: envoy
  executable: /var/vcap/packages/envoy/bin/envoy
  args:
  - -c /var/vcap/jobs/envoy/config/envoy.json
  - --max-obj-name-len 200
  - --v2-config-only
  capabilities:
  - NET_BIND_SERVICE
  hooks:
    pre_start: /var/vcap/jobs/envoy/bin/bpm-pre-start
  limits:
    open_files: <%= p('open_files') %>
